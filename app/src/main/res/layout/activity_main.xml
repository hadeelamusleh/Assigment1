<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/ุง"
    android:background="#f2cdee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Guess Number "
        android:id="@+id/text1"
        android:textSize="35dp"
        android:textStyle="bold|italic|"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:textColor="#a913b4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/inputFromUser"
        android:hint="Enter Number (0-1000)"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check "
        android:id="@+id/check"
        android:layout_below="@+id/res"
        android:layout_alignStart="@+id/text1"
        android:background="#a913b4"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#efb7f3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/res"
        android:textAlignment="center"
        android:layout_below="@+id/inputFromUser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReStart"
        android:id="@+id/restart"
        android:layout_alignTop="@+id/check"
        android:layout_alignEnd="@+id/inputFromUser"
        android:background="#a913b4"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#f5b0f7" />

</RelativeLayout>
